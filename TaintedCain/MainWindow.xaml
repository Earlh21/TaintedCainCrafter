<Window x:Class="TaintedCain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaintedCain"
        mc:Ignorable="d"
        Title="Tainted Cain Crafter" Height="450" Width="800"
        Name="MWindow">

    <Window.CommandBindings>
        <CommandBinding Command="local:Commands.ViewItem" Executed="ViewItem_OnExecute"/>
        <CommandBinding Command="local:Commands.ClearPickups" Executed="ClearPickups_OnExecute"/>
    </Window.CommandBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ItemsControl Grid.Row="0" ItemsSource="{Binding ElementName=MWindow, Path=PickupPool}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="32" Height="32" Source="{Binding Path=Icon}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Path=Name}" />
                        <TextBox Width="25" Height="25"
                                 TextAlignment="Center" VerticalAlignment="Center"
                                 Text="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=Amount,
                                 NotifyOnSourceUpdated=True}"
                                 SourceUpdated="OnPickupsChanged"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Button Grid.Row="1" Content="Clear" Padding="5" Margin="5"  HorizontalAlignment="Center"
                Command="local:Commands.ClearPickups"/>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Center">
            <ItemsControl ItemsSource="{Binding ElementName=MWindow, Path=Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image Width="64" Height="64" Source="{Binding Path=Icon}"
                               ToolTip="{Binding Path=Text}">
                            <Image.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick"
                                              Command="local:Commands.ViewItem"
                                              CommandParameter="{Binding}"/>
                            </Image.InputBindings>
                        </Image>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>